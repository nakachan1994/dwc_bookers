<!--新規投稿フォーム-->
<div class="new-book">
  <h2>New book</h2>
  <div class="new_book_form">
    <%= form_with model:@book,local:true do |f| %>
      <div class="form">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>

