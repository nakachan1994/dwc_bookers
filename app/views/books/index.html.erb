<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <!--削除機能まだなのであとで変更-->
        <td>
          Destroy
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!--新規投稿フォーム-->
<div class="new-book">
  <h2>New book</h2>
  <div class="book_form">
    <%= form_with model:@book,local:true do |f| %>
      <div class="form">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>

