<h1>Editing Book</h1>
  <div class="book_form">
    <%= form_with model:@book,local:true do |f| %>
      <div class="form">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Update Book' %>
    <% end %>
  </div>
  <%= link_to "Show", book_path %>
  <text>|</text>
  <%= link_to "Back", books_path %>